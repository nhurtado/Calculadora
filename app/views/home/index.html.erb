<h1>Calculadora Historica</h1>
<%= flash[:warning] || flash[:notice] || flash[:alert] %>
<div style="margin-top: 30px; margin-left: 20px; margin-right: 400px; overflow: hidden; border-style: solid;
    border-width: 2px; ">
    <%= form_tag(home_index_path, method: :get, enforce_utf8: false) do %>
    <% if params[:year] %>
      <%= hidden_field_tag 'year', @y %>
    <% end %>
    <div style="margin-top: 10px; margin-left: 10px; margin-bottom: 10px; width: 200px; float:left;">
        <label for="start">Cantidad</label>
	<% if @q %>
	  <input type="number" id="quantity" name="quantity" value="<%= @q %>"
           min="0" style="width: 100px;" required step="0.01"/>
	<% else %>
	  <input type="number" id="quantity" name="quantity"
           min="0" style="width: 100px;" required step="0.01"/>
	<% end %>
	<%= select_tag(:option, options_for_select([['CLP', 1], ['UF', 2], ['USD', 3], ['Oro (gr)', 4]], @o)) %>
    </div>
    <div style="margin-top: 10px; margin-bottom: 10px; width: 150px; float: left;">
        <label for="start">Fecha Inicio</label>
	<input type="date" id="start" name="start" value= "<%= @sd %>" min="1984-01-01" max="<%= @today %>" />
    </div>

    <div style="margin-top: 10px; margin-bottom: 10px; width: 150px; float: left;">
        <label for="target">Fecha Objetivo</label>
	<input type="date" id="target" name="target" value="<%= @td %>" min="1984-01-01" max="<%= @today %>"/ >
    </div>
    <div style="margin-top: 10px; margin-bottom: 10px; width: 100px; float: left;">
	<label for="submit">_</label>
    	<%= submit_tag 'Calcular', name: nil %>
    </div>
    <% end %>
    <% if @target_clp %>
      <div style="margin-top: 10px; margin-bottom: 10px; width: 200px; float: left;">
	  <b>CLP</b> <%= @target_clp %>
      </div>
    <% end %>
    <% if @ufs %>
      <div style="margin-top: 10px; margin-bottom: 10px; width: 200px; float: left;">
	  <b>UF</b> <%= @ufs %>
      </div>
    <% end %>
    <% if @target_usd %>
      <div style="margin-top: 10px; margin-bottom: 10px; width: 200px; float: left;">
	  <b>USD</b> <%= @target_usd %>
      </div>
    <% end %>
    <% if @target_gold %>
      <div style="margin-top: 10px; margin-bottom: 10px; width: 200px; float: left;">
	  <b>Oro (gr)</b> <%= @target_gold %>
      </div>
    <% end %>
</div>
